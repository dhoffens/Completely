<!-- flash bar for status update -->
<div class="container">
	<% flash.each do |key, value| %>
		<div class="alert alert-<%= key %>">
			<%= value %>
		</div>
	<% end %>
</div>
<!-- 3 buttons for inbox, sent, trash boxes -->
<div class="row">
	<div class="col-sm-3">
		<h2>Conversations </h2>
		<ul class="nav nav-pills nav-stacked boxstyle">
			<%= mailbox_section 'inbox', @box %>
			<%= mailbox_section 'sentbox', @box %>
			<%= mailbox_section 'trash', @box %>
		</ul>
			<%= link_to 'Start conversation', new_message_path, class: 'btn btn-md btn-primary' %>
	</div>

	<div class="col-sm-9">
		<% if @box == 'trash' %>
	    	<p><%= link_to 'Empty trash', empty_trash_conversations_path, class: 'btn btn-danger', 
	    		method: :delete, data: {confirm: 'Are you sure?'} %></p>
	  	<% end %>
		
		<div class="list-group boxstyle">

			<%= render partial: 'conversations/conversation', collection: @conversations %>			
		</div>
	</div>
</div>